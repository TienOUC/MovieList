.userAvatar{
  position: relative;
  background-color: #d81e06;
  height: 400rpx;
  width: 100%;
}
.avatar-img{
  position: absolute;
  overflow: hidden;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  transform: translate(-50%, -50%);
}
.avatar-nick{
  position: absolute;
  top: 310rpx;
  width: 100%;
  color: #fff;
  text-align: center;
}